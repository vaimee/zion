    "version": "0.2.0",
    "configurations": [
        {
            "name": "Test",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceRoot}/node_modules/jest/bin/jest.js",
                "--runInBand"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
        },
        {
            "name": "Test e2e",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceRoot}/node_modules/jest/bin/jest.js",
                "--runInBand",
                "--config",
                "./test/jest-e2e.json",
                "--testTimeout",
                "100000",
                "--detectOpenHandles"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
        },
        {
            "name": "Test e2e file",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceRoot}/node_modules/jest/bin/jest.js",
                "${fileBasename}",
                "--runInBand",
                "--config",
                "./test/jest-e2e.json",
                "--testTimeout",
                "100000",
                "--detectOpenHandles",
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
        },
        {
            "command": "npm run start:debug",
            "name": "Zion start",
            "request": "launch",
            "type": "node-terminal"
        }
    ]
}
